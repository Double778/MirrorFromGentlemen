<?xml version="1.0" encoding="utf-8"?>


<com.zhy.autolayout.AutoRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@mipmap/bg">
<com.zhy.autolayout.AutoLinearLayout
    android:id="@+id/pop_up_Lt"
    android:layout_marginTop="68px"
    android:layout_marginLeft="22px"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">



    <com.zhy.autolayout.AutoLinearLayout
        android:gravity="center"
        android:layout_marginBottom="16px"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/titles_tv"
            android:textSize="24px"
            android:layout_width="0dp"
            android:layout_weight="5"
            android:layout_height="wrap_content"
            android:text="浏览所有分类"
            android:textColor="#ffffff" />

        <ImageView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:background="@mipmap/xiala" />
    </com.zhy.autolayout.AutoLinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#ffffff"/>
    <TextView
        android:layout_marginTop="3dp"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffffff"/>
    <TextView
        android:textSize="24px"
        android:layout_marginTop="26px"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="显示排序为 最新推荐"
        android:textColor="#ffffff"/>
</com.zhy.autolayout.AutoLinearLayout>

    <ImageView
        android:layout_width="300px"
        android:layout_height="300px"
        android:background="@mipmap/nullnull"
        android:layout_centerInParent="true"
        android:visibility="gone"
        android:id="@+id/img"/>
<HorizontalScrollView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_centerInParent="true"
    android:layout_gravity="center_vertical"
    android:scrollbars="none">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/repeat_Rv"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </com.zhy.autolayout.AutoLinearLayout>
</HorizontalScrollView>

<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_marginBottom="48px"
    android:layout_marginLeft="40px"
    android:background="@mipmap/mirror" />

<TextView
    android:textSize="36px"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_alignParentBottom="true"
    android:layout_alignParentRight="true"
    android:layout_marginBottom="48px"
    android:layout_marginRight="40px"
    android:text="登录"
    android:textColor="#ffffff" />
</com.zhy.autolayout.AutoRelativeLayout>