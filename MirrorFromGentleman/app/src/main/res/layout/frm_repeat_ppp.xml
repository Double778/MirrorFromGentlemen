<?xml version="1.0" encoding="utf-8"?>
<com.zhy.autolayout.AutoLinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/frm_repeat_ppp_Lt"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48px"
        android:layout_marginTop="148px"
        android:orientation="vertical">

        <TextView
            android:id="@+id/all_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="全部分類"
            android:textColor="#5e6f87"
            android:textSize="28px" />

        <ImageView
            android:id="@+id/all_iv"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22px"
            android:background="@mipmap/biaoti" />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48px"
        android:layout_marginTop="44px"
        android:orientation="vertical">

        <TextView
            android:id="@+id/flat_light_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="瀏覽平光鏡"
            android:textColor="#5e6f87"
            android:textSize="28px" />

        <ImageView
            android:id="@+id/flat_light_iv"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22px"
            android:background="@mipmap/biaoti" />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48px"
        android:layout_marginTop="44px"
        android:orientation="vertical">

        <TextView
            android:id="@+id/sunglasses_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="瀏覽太陽鏡"

            android:textSize="28px"
            android:textColor="#5e6f87"/>

        <ImageView
            android:id="@+id/sunglasses_iv"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22px"
            android:background="@mipmap/biaoti" />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48px"
        android:layout_marginTop="44px"
        android:orientation="vertical">

        <TextView
            android:id="@+id/share_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="專題分享"
            android:textColor="#5e6f87"
            android:textSize="28px" />

        <ImageView
            android:id="@+id/share_iv"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22px"
            android:background="@mipmap/biaoti" />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48px"
        android:layout_marginTop="44px"
        android:orientation="vertical">

        <TextView
            android:id="@+id/shopping_cart_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的購物車"
            android:textColor="#5e6f87"
            android:textSize="28px" />

        <ImageView
            android:id="@+id/shopping_cart_iv"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="22px"
            android:background="@mipmap/biaoti" />
    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48px"
        android:layout_marginTop="44px"
        android:orientation="vertical">

        <TextView
            android:id="@+id/return_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回首頁"
            android:textColor="#5e6f87"
            android:textSize="28px" />


    </com.zhy.autolayout.AutoLinearLayout>

    <com.zhy.autolayout.AutoLinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="48px"
        android:layout_marginTop="44px"
        android:orientation="vertical">

        <TextView
            android:id="@+id/exit_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="退出程序"
            android:textColor="#5e6f87"
            android:textSize="28px" />


    </com.zhy.autolayout.AutoLinearLayout>
    <!--<ListView-->
    <!--android:id="@+id/ppp_lv"-->
    <!--android:layout_width="wrap_content"-->
    <!--android:layout_height="wrap_content" />-->


</com.zhy.autolayout.AutoLinearLayout>